<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= @name %>
      </h2>
      <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">名前</th>
            <td class="table__col2"><%= @name %></td>
          </tr>
          
          
          
        </tbody>
      </table>
      <h2 class="page-heading">
        <%= @name %>さんの献立
      </h2>
      <div class="user__card">
        <%= render partial: "lunches/lunch", collection: @user.lunches %>
      </div>
    </div>
  </div>
</div>
